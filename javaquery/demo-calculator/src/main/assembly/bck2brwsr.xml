<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  
  <id>bck2brwsr</id>
  <formats>
      <format>zip</format>
      <format>dir</format>
  </formats>
  <baseDirectory>public_html</baseDirectory>
  <dependencySets>
    <dependencySet>
        <useProjectArtifact>false</useProjectArtifact>
        <scope>runtime</scope>
        <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets> 
  <files>
    <file>
      <source>${project.build.directory}/${project.build.finalName}.jar</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>${project.build.directory}/classes/org/apidesign/bck2brwsr/demo/calc/staticcompilation/Calculator.xhtml</source>
      <outputDirectory>/</outputDirectory>
      <destName>index.xhtml</destName>
    </file>
    <file>
      <source>${project.build.directory}/classes/org/apidesign/bck2brwsr/demo/calc/staticcompilation/bootjava.js</source>
      <outputDirectory>/</outputDirectory>
      <destName>bck2brwsr.js</destName>
    </file>
  </files>

</assembly>